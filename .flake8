[flake8]
# E501 line too long (110 > 88 characters)

max-line-length = 110
exclude =
    .git,
    __pycache__,
    .env,
    .eggs,
    .venv,
    env,
    venv,
    ENV,
    env.bak,
    venv.bak,
    ctypes,
    pydispatch,
    testsuite,

per-file-ignores =
    ./actinia_stac_plugin/core/stac.py: E501
    ./actinia_stac_plugin/api/stac.py: E501
    ./actinia_stac_plugin/endpoints.py: E501
    ./actinia_stac_plugin/*: B403,B301
